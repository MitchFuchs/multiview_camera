[Unit]
Description=Wait for NAS to be reachable and then mount /mnt/data
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'until ping -c1 172.20.67.150 &>/dev/null; do sleep 1; done; mount -t cifs -o username=pi_camera,password=chimp3dNAS,rw,uid=1000,gid=500 //172.20.67.150/data /mnt/data'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
